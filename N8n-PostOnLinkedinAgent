openapi: 3.1.0
info:
  title: Send Text to Webhook
  description: This action posts a user-defined text to a specified webhook using a simple JSON payload.
  version: 1.0.0
servers:
  - url: https://telquestintl.app.n8n.cloud
    description: n8n webhook server
paths:
  /webhook/9eba828b-5c77-4fa9-:
    post:
      operationId: PostOnLinkedin
      summary: Send text to the n8n webhook
      description: Accepts a string of text from the user and posts it to the n8n webhook.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                text:
                  type: string
                  description: The text you want to send to the webhook
              required:
                - text
      responses:
        '200':
          description: Successfully posted to the webhook
        '400':
          description: Invalid input
        '500':
          description: Server error
